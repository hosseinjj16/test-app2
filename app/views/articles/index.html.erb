<h1>Articles</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |articles| %>
        <tr>
        <td><%= articles.title %></td>
        <td><%= articles.description %></td>
        <td>Actions</td>
        </tr>
    <% end %>
  </tbody>
</table>