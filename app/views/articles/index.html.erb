<h1>Articles</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |articles| %>
        <tr>
        <td><%= articles.title %></td>
        <td><%= articles.description %></td>
        <td>
          <%= link_to 'Show', article_path(articles) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_article_path(articles)%>
        </td>
        <td>
          <%= link_to 'Delete' , article_path(articles), method: :delete, data: {confirm: "Are You Sure"}  %>
        </td>
        </tr>
    <% end %>
    
  </tbody>
</table>
<p>
  <%= link_to 'Create New Articles', new_article_path %>
</p>
